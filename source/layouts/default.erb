<!doctype html>
<html lang="<%= current_page.metadata[:options][:lang] || current_page.data.lang %>" ng-app="NosApp">
  <head>
    <meta charset="utf-8">
    <!-- Always force latest IE rendering engine or request Chrome Frame -->
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title><%= current_page.data.title || "Nos et Mutamur" %></title>
    <%= stylesheet_link_tag "main" %>
  </head>
  <body layout="column" class="<%= page_classes %>">
    <%= yield %>
  </body>
</html>
