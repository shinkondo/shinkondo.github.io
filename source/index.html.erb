---
pageable: true
per_page: 10
lang: en
---
<% if paginate && num_pages > 1 %>
  <p>Page <%= page_number %> of <%= num_pages %></p>
  <% if prev_page %>
    <p><%= link_to 'Previous page', prev_page %></p>
  <% end %>
<% end %>
<div class="screen">
<div class="pack">
  <h1 class="md-display3 site-logo"><%= link_to 'Nos et Mutamur', '/index.html' %></h1>
</div>
</div>
<div class="pack">

  <div layout="row" layout-align="center" ng->
    <div flex-sm="100" flex-md="80" flex="66">
      <div ng-controller="MyIndexCtrl">
      <md-tabs md-selected="selectedIndex">
        <md-tab md-on-select="onTabSelected('all')">
          <a href="#/">All</a>
        </md-tab> 
        <% blog.articles.map do |article| article.data.category end.uniq.each_with_index do |cat, i| %>
        <md-tab md-on-select="onTabSelected('<%=cat%>')">
          <md-label><a href="#/<%=cat%>"><%=cat.capitalize%></a></md-label>
        </md-tab> 
        <% end %>
      </md-tabs>
      </div>
      <md-list ng-view>
      <!-- start fall back for noscript / seo -->
      <% page_articles.each_with_index do |article, i| %>
        <md-list-item class="md-2-line" ng-hide="true">
          <div class="time-info">
            <span class="day"><%= article.date.strftime('%e') %></span><br>
            <span class="month-year"><%= article.date.strftime('%b, %Y') %></span>
          </div>
          <div class="md-list-item-text post-info">
            <h3 class="post-info-title"><%= link_to titleize(article.title), article, :class => "gray-link" %></h3>
            <%= article.summary() %>
          </div>
        </md-list-item>
      <% end %>
      <!-- end fall back for noscript / seo -->
      </md-list>
    </div>
  </div>
</div>

<% if paginate %>
  <% if next_page %>
    <p><%= link_to 'Next page', next_page %></p>
  <% end %>
<% end %>